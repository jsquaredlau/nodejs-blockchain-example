{
    "atom": {
        "rewriteTsconfig": true
    },
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "build"
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "app/controllers/businessController.ts",
        "app/controllers/index.ts",
        "app/controllers/merchantController.ts",
        "app/controllers/mobileController.ts",
        "app/controllers/userController.ts",
        "app/controllers/welcomeController.ts",
        "app/models/index.ts",
        "app/models/interfaces.ts",
        "app/server.ts",
        "app/services/firebaseServices.ts",
        "app/services/index.ts",
        "app/services/loyaltySchemeServices.ts",
        "app/services/merchantServices.ts",
        "app/services/mobileServices.ts",
        "app/services/solidityOps.ts",
        "app/services/web3Services.ts"
    ]
}
